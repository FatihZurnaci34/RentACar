@model Entities.Concrete.Car

<h4>Araba düzenle</h4>
<hr />
<form method="post" action="/Car/Update">
    <table>
        <tr>
            <td colspan="3"><div asp-validation-summary="All"></div></td>
        </tr>
        <tr>
            <td><label asp-for="Name"></label></td>
            <td><input asp-for="Name" /></td>
            <td><span asp-validation-for="Name"></span></td>
        </tr>
        <tr>
            <td><label asp-for="ModelYear"></label></td>
            <td><input asp-for="ModelYear" /></td>
            <td><span asp-validation-for="ModelYear"></span></td>
        </tr>
        <tr>
            <td><label asp-for="DailyPrice"></label></td>
            <td><input asp-for="DailyPrice" /></td>
            <td><span asp-validation-for="DailyPrice"></span></td>
        </tr>
        <tr>
            <td><label asp-for="Description"></label></td>
            <td><input asp-for="Description" /></td>
            <td><span asp-validation-for="Description"></span></td>
        </tr>
        <tr>
            <td><label asp-for="BrandId"></label></td>
            <td><input asp-for="BrandId" /></td>
            <td><span asp-validation-for="BrandId"></span></td>
        </tr>
        <tr>
            <td><label asp-for="ColorId"></label></td>
            <td><input asp-for="ColorId" /></td>
            <td><span asp-validation-for="ColorId"></span></td>
        </tr>
        <tr>
            <td colspan="3"><input type="submit" value="Düzenle" /></td>
        </tr>
    </table>
</form>